@model DeliveryClient.Models.Login

@{
    ViewData["Title"] = "Login";
}
@Html.Partial("_NavBar")

<style>

    .body {
        align-content: center;
        animation: alternate;
        align-items: center;
    }
    .row-margin-30 {
        margin-top: 4.0em;
    }

    .row-margin-20 {
        margin-top: 2.0em;
    }

    .box {
       
        background-color:aquamarine;
        position: absolute;
        top: 120px;
        right: 400px;
        bottom: 120px;
        left: 400px;
    }
</style>





<div class="box">
    
    <div class="container row-margin-20"> 
        <div class="row">
            <div class="col-sm">

            </div>
            <div class="col-sm text-center">
                <h1 style="color:firebrick">Login</h1>
            </div>
            <div class="col-sm">

            </div>
        </div>

        <div class="row row-margin-30">
            <div class="col-sm">
            </div>
            <div class="col-sm">
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="userName" class="control-label"></label>
                        <input asp-for="userName" class="form-control" />
                        <span asp-validation-for="userName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="pass" class="control-label"></label>
                        <input asp-for="pass" class="form-control" />
                        <span asp-validation-for="pass" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="type" class="control-label"></label>
                        <select asp-for="type" class="form-control">
                            <option value="Customer">Customer</option>
                            <option value="Delivery Executive">Delivery Executive</option>
                            <option value="Admin">Admin</option>
                        </select>
                        <span asp-validation-for="type" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Login" class="btn btn-primary" />
                    </div>
                </form>

            </div>
            <div class="col-sm">

            </div>
        </div>
    </div>
</div>     
            
               




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
